{% extends 'auth.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}

        <!-- Log In page -->
        <div class="container">
            <div class="row vh-100 d-flex justify-content-center">
                <div class="col-12 align-self-center">
                    <div class="row">
                        <div class="col-lg-5 mx-auto">
                            <div class="card">
                                {% for flashError in app.flashes('verify_email_error') %}
                                    <div class="alert alert-danger" role="alert">{{ flashError }}</div>
                                {% endfor %}
                                <div class="card-body p-0 auth-header-box">
                                    <div class="text-center p-3">
                                        <h4 class="mt-3 mb-1 font-weight-semibold text-white font-18">Test Technique par Kalitics</h4>   
                                        <p class="text-muted  mb-0">Création du compte</p>  
                                    </div>
                                </div>
                                <div class="card-body p-0">
                                    
                                    <div class="tab-content">
                                        <div class="tab-pane active p-3" id="LogIn_Tab" role="tabpanel">                                        
                                            {{ form_start(registrationForm) }}
                                                
                                                <input type="hidden" name="_csrf_token"
                                                    value="{{ csrf_token('authenticate') }}"
                                                >
                                                <div class="form-group mb-2">
                                                    {{ form_row(registrationForm.Nom) }}                                   
                                                </div>

                                                <div class="form-group mb-2">
                                                    {{ form_row(registrationForm.Prenom) }}                                   
                                                </div>

                                                <div class="form-group mb-2">
                                                    {{ form_row(registrationForm.Matricule) }}                                   
                                                </div>
                    
                                                <div class="form-group mb-2">
                                                    {{ form_row(registrationForm.plainPassword, {
                                                        label: 'Mot de passe'
                                                    }) }}                               
                                                </div>
                    
                                                <div class="form-group mb-0 row" style="margin-bottom: 20px !important">
                                                    <div class="col-12">
                                                        <button class="btn btn-primary btn-block waves-effect waves-light" type="submit">Créer le compte 
                                                            <i class="fas fa-sign-in-alt ml-1"></i>
                                                        </button>
                                                    </div> 
                                                </div>                           
                                                {{ form_end(registrationForm) }}
                                                <p class="text-center" style="margin-top:20px" ><a href="/" >J'ai déja un compte</a></p>
                                            </div>

                                    </div>
                                </div>
                                <div class="card-body bg-light-alt text-center">
                                    <span class="text-muted d-none d-sm-inline-block">Mehdi El Allam 2021</span>                                            
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        
{% endblock %}
