{% extends 'base.html.twig' %}

{% block title %}Les pointages{% endblock %}

{% block body %}
<div class="page-content" style="margin-top: 35px">
        <div class="container-fluid">
        <div class="row">
            <div class="col">
                <h4 class="page-title" >Les pointages</h4>
            </div>
            <div class="col-auto align-self-center">
                <a class="btn btn-sm btn-soft-primary" href="{{ path('nouveau_pointage') }}">Nouveau pointage</a>
            </div> 
        </div>
            <div class="row">
                <div class="col-lg-12">
                    <div class="card">
                        
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th>ID</th>
                                            <th>Date de pointage</th>
                                            <th>Durée</th>
                                            <th>Employé</th>
                                            <th>Chantier</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                    {% for pointage in pointages %}
                                        <tr>
                                            <td>{{ pointage.id }}</td>
                                            <td>{{ pointage.date_pointage ? pointage.date_pointage|date('Y-m-d h:i:s') : '' }}</td>
                                            <td>{{ pointage.duree }} heures</td>
                                            <td>
                                                {{ pointage.employe_nom }} {{ pointage.employe_prenom }} 
                                            </td>
                                            <td>{{ pointage.chantier }}</td>
                                        </tr>
                                    {% else %}
                                        <tr>
                                            <td colspan="4" class="text-center" >Aucun pointage pour le moment</td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                                
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
